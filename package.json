{
  "name": "storyshop-app",
  "version": "1.0.0",
  "description": "Web frontend for StoryShopApp.com",
  "main": "index.js",
  "scripts": {
    "build:webpack": "webpack --config webpack.config.js",
    "build:model": "node utils/gen-fake-ids.js",
    "build:html": "mkdir -p build && cp index.html build/",
    "build": "npm run build:html && npm run build:model && npm run build:webpack",
    "test:unit": "tape -r babel-register 'src/**/spec.js' | faucet",
    "test:e2e": "node wdio/run.js | faucet",
    "pretest": "npm run build",
    "test": "npm run test:unit && npm run test:e2e",
    "start": "node server.js",
    "dev": "npm run build:html && webpack-dev-server --hot --inline --config webpack.config.js --content-base build --port 8888 --host 0.0.0.0",
    "selenium:install": "selenium-standalone install",
    "selenium:start": "selenium-standalone start &> /dev/null &",
    "selenium": "npm run selenium:install && npm run selenium:start",
    "preci": "npm run selenium && npm run start &> /dev/null &",
    "ci": "sleep 5 && npm run test"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StoryShop/app.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StoryShop/app/issues"
  },
  "homepage": "https://github.com/StoryShop/app#readme",
  "devDependencies": {
    "babel-loader": "^6.2.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "express": "^4.13.4",
    "falcor": "^0.1.16",
    "faucet": "0.0.1",
    "glob": "^6.0.4",
    "history": "^2.0.0",
    "json-loader": "^0.5.4",
    "material-ui": "^0.14.4",
    "react": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0-rc6",
    "react-stamp": "^0.4.0",
    "react-tap-event-plugin": "^0.2.2",
    "selenium-standalone": "^4.9.0",
    "shortid": "^2.2.4",
    "sinon": "^1.17.3",
    "tape": "^4.4.0",
    "webdriverio": "^4.0.3",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  }
}
